<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
              android:weightSum="18" android:paddingBottom="6dp">
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Fun"
              android:id="@+id/voteOption" android:layout_gravity="left|top" android:layout_weight="5"/>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:id="@+id/voteBar" android:layout_gravity="right"
                 android:layout_weight="11" android:focusable="true" android:focusableInTouchMode="true"
                 android:mirrorForRtl="false" android:progressDrawable="@drawable/custom_progress_horizontal"
            />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8"
              android:id="@+id/voteCount" android:textAlignment="gravity" android:layout_weight="1"
              android:layout_gravity="center" android:gravity="right"/>
</LinearLayout>
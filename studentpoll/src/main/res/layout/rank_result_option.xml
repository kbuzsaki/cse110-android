<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:weightSum="18" android:paddingBottom="6dp" android:gravity="left">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/voteCount" android:textAlignment="gravity" android:layout_weight="1"
              android:layout_gravity="center"
              android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginRight="10dp"
              android:text="8"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fun"
              android:id="@+id/voteOption" android:layout_gravity="left|top" android:layout_weight="5"
              android:textAppearance="?android:attr/textAppearanceLarge"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:padding="10dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pizza Poll"
            android:id="@+id/pollTitle" android:layout_gravity="center_horizontal"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:id="@+id/responseContentFrame">
    </FrameLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Results"
            android:id="@+id/resultsButton" android:layout_gravity="center_horizontal"/>
</LinearLayout>